@inherits MudExComponentBase
@using MudBlazor

<MudCard Class="portfolio-card">
    <MudCardContent>
        @Body
    </MudCardContent>
    <MudCardActions>
        @Actions
    </MudCardActions>
</MudCard>

@code {
    /// <summary>
    /// Reusable card component for displaying portfolio information
    /// </summary>
    /// <remarks>
    /// This component provides a consistent card layout for displaying portfolio data,
    /// with support for custom content and actions.
    /// </remarks>
    public partial class PortfolioCard
    {
        /// <summary>
        /// Gets or sets the main content of the card
        /// </summary>
        [Parameter] public RenderFragment? Body { get; set; }

        /// <summary>
        /// Gets or sets the actions section of the card
        /// </summary>
        [Parameter] public RenderFragment? Actions { get; set; }

        /// <summary>
        /// Gets or sets the title of the card
        /// </summary>
        [Parameter] public string Title { get; set; } = string.Empty;

        /// <summary>
        /// Gets or sets the icon to display in the card
        /// </summary>
        [Parameter] public string Icon { get; set; } = "folder";
    }
}
