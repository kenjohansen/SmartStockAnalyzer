@inherits LayoutComponentBase
@using MudBlazor

<MudThemeProvider/>
<MudDialogProvider/>
<MudSnackbarProvider/>

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h6">Smart Portfolio Advisor</MudText>
        <MudSpacer/>
        <MudIconButton Icon="notifications" Color="Color.Inherit" />
        <MudIconButton Icon="account_circle" Color="Color.Inherit" />
    </MudAppBar>

    <MudDrawer @bind-Open="drawerOpen" ClipMode="DrawerClipMode.Always" Elevation="0">
        <NavigationMenu />
    </MudDrawer>

    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large" Class="py-4">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>

@code {
    /// <summary>
    /// Main layout component for the Smart Portfolio Analyzer application
    /// </summary>
    /// <remarks>
    /// This component provides the main layout structure for the application,
    /// including header, navigation, and content areas.
    /// </remarks>
    private bool drawerOpen = true;

    private void DrawerToggle()
    {
        drawerOpen = !drawerOpen;
    }
}
